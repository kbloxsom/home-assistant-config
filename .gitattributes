# Enforce LF line endings for YAML files
*.yaml text eol=lf
*.yml  text eol=lf

# Also enforce LF for config files
*.yml   text eol=lf
*.yaml  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf

# Enforce LF for other text files
*.yml   text eol=lf
*.yaml  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
